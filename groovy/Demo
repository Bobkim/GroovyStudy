def repeat(message, repeat = 5) {
    for (i in 1..repeat) {
        println message
    }
}

def range = 0..4
println range.class
assert range instanceof List

def coll = ["Groovy", "Java", "Ruby"]
println coll.class
assert  coll instanceof Collection
assert coll instanceof ArrayList